# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
insert_final_newline = true
charset = utf-8
indent_style = space
end_of_line = lf

[*.java]
indent_size = 4

[*.{js,json,yml,yaml}]
indent_size = 2

[*.xml]
end_of_line = crlf
indent_size = 4
